@model Project.Presentation.Models.ProdutoCadastroModel

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>Cadastro de Produto</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <label>
        Digite o nome do seu produto
    </label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-4" })
    <br />
    <label>
        Digite o Preco do seu produto
    </label>
    @Html.TextBoxFor(model => model.Preco,"",  new { @class = "form-control col-md-4" })
    <br />
    <label>
        Digite Quantidade de Produto
    </label>
    @Html.TextBoxFor(model => model.Quantidade,"", new { @class = "form-control col-md-4" })
    <br />
    <label>
        Escolha o Estoque
    </label>
    @Html.DropDownListFor(model => model.IdEstoque, Model.Estoques, "Escolha uma opcao", new { @class = "form-control col-md-4" })
<br />
<input type="submit" value="Cadastrar" class="btn btn-primary" />
<br />
<br />
<strong>@TempData["Mensagem"]</strong>
}
